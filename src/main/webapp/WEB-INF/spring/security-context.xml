<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 403 에러 처리 -->
	<bean id="customAccessDeniedHandler" class="com.test.project.auth.CustomAccessDeniedHandler" />
	
	<!-- 로그인 성공 처리 -->
	<bean id="customLoginSuccessHandler" class="com.test.project.auth.CustomLoginSuccessHandler" />
		
	<!-- 암호화 인코더 -->
	<bean id="bCryptPasswordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"></bean>
	
	<!-- 로그인 처리 -->
	<bean id="customUserDetailsService" class="com.test.project.auth.CustomUserDetailsService"></bean>
		
	<security:http>
	
		<security:intercept-url pattern="/" access="permitAll" />
		
		<security:intercept-url pattern="/board/add" 
					access="hasRole('ROLE_MEMBER')" />
		<security:intercept-url pattern="/board/edit" 
					access="hasRole('ROLE_MEMBER')" />	
		<security:intercept-url pattern="/board/del" 
					access="hasRole('ROLE_MEMBER')" />				
		
		
		<!-- <security:intercept-url pattern="/" 
					access="hasRole('ROLE_MEMBER')" /> -->
		
		<!-- 
		<security:intercept-url pattern="/member.do" 
					access="hasRole('ROLE_MEMBER')" />
		<security:intercept-url pattern="/admin.do" 
					access="hasRole('ROLE_ADMIN')" /> 
		-->
							
		<security:access-denied-handler ref="customAccessDeniedHandler" />
		
		<security:logout logout-url="/member/logout" invalidate-session="true" logout-success-url="/" />
		
		<security:form-login login-page="/member/login" authentication-success-handler-ref="customLoginSuccessHandler" />
		
	</security:http>
	
	<security:authentication-manager>
		<security:authentication-provider user-service-ref="customUserDetailsService">
			<security:password-encoder ref="bCryptPasswordEncoder" />
		</security:authentication-provider>
	</security:authentication-manager>

</beans>

